{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "NodeNext",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/"
  ]
}
